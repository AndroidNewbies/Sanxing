<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.SpinnerTitleStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.CardHeadingStyle" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black87</item>
        <item name="android:layout_marginTop">@dimen/typo_headline_margin</item>
        <item name="android:layout_marginBottom">@dimen/typo_headline_margin</item>
    </style>
    <style name="AppTheme.CardSubheadingStyle" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/black87</item>
        <item name="android:layout_marginTop">@dimen/typo_subheading_margin</item>
        <item name="android:layout_marginBottom">@dimen/typo_subheading_margin</item>
    </style>
    <style name="AppTheme.SpinnerStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/AppTheme.SpinnerTitleStyle</item>
        <item name="android:textColor">@color/appBarWhite</item>
    </style>
    <style name="AppTheme.AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.FormBarTheme" parent="AppTheme.AppBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
    </style>
    <style name="AppTheme.ItemTitleStyle" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/typo_headline_margin</item>
        <item name="android:layout_marginBottom">@dimen/typo_headline_margin</item>
    </style>
    <style name="TextEditHeadlineStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <!--<item name="android:textColorHint">@color/Color Name</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <!--<item name="colorAccent">@color/white</item>-->
        <item name="colorControlNormal">@color/transparent</item>
        <!--<item name="colorControlActivated">@color/Color Name</item>-->
    </style>
</resources>
