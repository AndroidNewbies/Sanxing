<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:layout_marginBottom="@dimen/card_padding_bottom"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_padding_top"
        android:paddingLeft="@dimen/card_padding_horizontal"
        android:paddingRight="@dimen/card_padding_horizontal"
        android:paddingBottom="@dimen/card_padding_bottom">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/task_card_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/AppTheme.CardHeadingStyle" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/task_card_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_card_headline"
            style="@style/AppTheme.CardSubheadingStyle" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
